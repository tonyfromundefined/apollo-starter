{
  "name": "apollo-starter",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "dotenv -e .env.development -- ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "debug": "dotenv -e .env.development -- ts-node-dev --respawn --transpileOnly --inspect ./src/index.ts",
    "generate": "graphql-codegen --config codegen.yml",
    "prebuild": "rimraf ./dist && yarn generate",
    "build": "tsc && cp ./src/graphql/generated/schema.graphql ./dist/graphql/generated/schema.graphql",
    "start": "dotenv -e .env.production -- node ./dist/index.js",
    "lint": "tslint --project ."
  },
  "dependencies": {
    "apollo-server-express": "^2.8.2",
    "cors": "^2.8.5",
    "dotenv-cli": "^2.0.1",
    "es6-promisify": "^6.0.1",
    "express": "^4.17.1",
    "git-last-commit": "^1.0.0",
    "graphql": "^14.4.2",
    "graphql-import": "^0.7.1",
    "sequelize": "^5.16.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.6.1",
    "@graphql-codegen/schema-ast": "^1.6.1",
    "@graphql-codegen/typescript": "1.6.1",
    "@graphql-codegen/typescript-resolvers": "1.6.1",
    "@types/es6-promisify": "^6.0.0",
    "@types/express": "^4.17.1",
    "@types/graphql": "^14.2.3",
    "ts-node-dev": "^1.0.0-pre.41",
    "tslint": "^5.19.0",
    "typescript": "^3.5.3"
  }
}
